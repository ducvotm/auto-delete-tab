{
  "manifest_version": 3,
  "name": "YouTube Focus Mode",
  "version": "1.0",
  "description": "A Chrome extension to help you focus on YouTube videos by hiding distractions",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 